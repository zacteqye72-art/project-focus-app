{
  "name": "project-focus-app",
  "version": "0.1.0",
  "description": "Project Focus - macOS desktop app (Electron) MVP for focus sessions and reminders.",
  "main": "electron/main.js",
  "author": "Project Focus",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electronmon .",
    "debug": "OPEN_DEV_TOOLS=true electron .",
    "debug-dev": "OPEN_DEV_TOOLS=true electronmon .",
    "build": "electron-builder --config build/electron-builder.yml",
    "build:arm64": "electron-builder --config build/electron-builder.yml --arm64",
    "build:x64": "electron-builder --config build/electron-builder.yml --x64",
    "build:universal": "electron-builder --config build/electron-builder.yml --universal"
  },
  "dependencies": {
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.2"
  },
  "build": {
    "appId": "com.projectfocus.app",
    "productName": "Project Focus",
    "electronVersion": "30.5.1",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "darkModeSupport": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "Project Focus Installer",
      "backgroundColor": "#f8f9fa",
      "window": {
        "width": 600,
        "height": 400
      }
    },
    "files": [
      "electron/**/*",
      "src/**/*",
      "package.json",
      "config.js",
      "config.example.js",
      "node_modules/electron-store/**/*",
      "!screenshots/**/*"
    ],
    "extraFiles": [
      {
        "from": "config.example.js",
        "to": "config.example.js"
      }
    ]
  }
}


